<style>
    .card-equal {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 100%;
    }
  </style>
  <div class="container mt-5">
    <h2 class="mb-4">Products</h2>
    <div class="row">
      {{#each content}}
      <div class="col-md-3 mb-4 d-flex align-items-stretch">
        <div class="card card-equal">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text"><strong>Director:</strong> {{this.director}}</p>
            <p class="card-text"><strong>Year:</strong> {{this.release_year}}</p>
            <p class="card-text"><strong>Genre:</strong> {{this.genre}}</p>
            <p class="card-text"><strong>Format:</strong> {{this.format}}</p>

            <!--<form action="/add-to-library" method="POST" class="mt-auto"> <!-- TEMPORARY TEST: add-to-cart directly adds item to library - original intended route: "/add-to-cart", change back once cart is functional --><!--
              <input type="hidden" name="content_type" value="{{this.content_type}}">
              <input type="hidden" name="title" value="{{this.title}}">
              <input type="hidden" name="director" value="{{this.director}}">
              <input type="hidden" name="release_year" value="{{this.release_year}}">
              <input type="hidden" name="genre" value="{{this.genre}}">
              <input type="hidden" name="format" value="{{this.format}}">
              <input type="hidden" name="price" value="10.00"> <!-- Adjust the price as needed --><!-- 
              <div class="form-group">
                <label for="quantity-{{this.id}}">Quantity:</label>
                <input type="number" id="quantity-{{this.id}}" name="quantity" class="form-control" value="1" min="1">
              </div> 
              <button type="submit" class="btn btn-primary">Add to Cart</button>
            </form>-->

            <form action="/add-to-cart" method="post">
                <input type="hidden" name="contentId" value="{{this.content_id}}">
                <button type="submit" class="btn btn-primary">Add to Cart</button>
            </form>

            <form action="/add-to-favorites" method="POST" class="mt-auto"> <!-- add to favorites button -->
                <input type="hidden" name="contentId" value="{{this.content_id}}">
                <input type="hidden" name="content_type" value="{{this.content_type}}">
                <input type="hidden" name="title" value="{{this.title}}">
                <input type="hidden" name="director" value="{{this.director}}">
                <input type="hidden" name="release_year" value="{{this.release_year}}">
                <input type="hidden" name="genre" value="{{this.genre}}">
                <input type="hidden" name="format" value="{{this.format}}">
                <input type="hidden" name="price" value="10.00"> <!-- Adjust the price as needed -->
                {{#if (includes ../favoriteTitles this.title)}} <!-- chang color based on existence in favorites -->
                <button type="button" class="btn btn-secondary" disabled>Favorited</button>
                {{else}}
                <button type="submit" class="btn btn-primary">Favorite</button>
                {{/if}}
            </form>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
